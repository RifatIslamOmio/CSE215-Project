<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="467.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShowRequests">
   <children>
      <Label fx:id="addList" layoutX="267.0" layoutY="44.0" style="-fx-background-color: #ffffff;" text="Show Selected Message">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextArea fx:id="conversation" editable="false" layoutX="246.0" layoutY="104.0" prefHeight="300.0" prefWidth="382.0" promptText="Conversation to appear here..." style="-fx-background-color: #000000;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </TextArea>
      <Button fx:id="addButton" disable="true" layoutX="32.0" layoutY="40.0" mnemonicParsing="false" onAction="#addClick" style="-fx-background-color: #dcdcdc;" text="ACCEPT" />
      <ListView fx:id="nameList" fixedCellSize="20.0" layoutX="32.0" layoutY="105.0" onMouseClicked="#nameListSelected" prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: #ffffff;" />
      <Button fx:id="showMessageButton" layoutX="451.0" layoutY="34.0" mnemonicParsing="false" onAction="#showMessageClick" prefHeight="44.0" prefWidth="135.0" style="-fx-background-color: #dcdcdc;" text="Show Messages">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="deleteButton" disable="true" layoutX="113.0" layoutY="40.0" mnemonicParsing="false" onAction="#deleteClick" style="-fx-background-color: #dcdcdc;" text="DELETE" />
   </children>
</AnchorPane>
